#!/bin/sh
set -e

usage(){
	"${STI_SCRIPTS_PATH}/usage"
}

run_sleep(){
	echo "Ponder the universe with infinate sleep..."
	sleep infinity
}

run_app(){
	R --no-save < app.R
}

debug(){
	which lsb_release >/dev/null 2>&1 && lsb_release -ircd
	cat /etc/*-release || echo "non RHEL OS"

	# print R info
	R --version
	R -q -e "sessionInfo()"
	R -q -e "installed.packages()"
}

failure(){
	debug
	run_sleep
}

usage
run_app || failure
